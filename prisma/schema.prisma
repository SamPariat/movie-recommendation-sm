generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("ATLAS_CONNECTION_URL")
}

model MovieUsers {
  id                 String         @id @default(auto()) @map("_id") @db.ObjectId
  email              String         @unique
  password           String
  name               String
  thumbnailUrl       String?
  hashedRefreshToken String?
  moviereview        MovieReviews[]
}

model MovieReviews {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  review      String
  sentiment   String
  movieId     Int
  movieUser   MovieUsers @relation(references: [id], fields: [movieUserId])
  movieUserId String     @db.ObjectId
}

model MovieSentiment {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  movieId  Int    @unique
  positive Int    @default(0)
  negative Int    @default(0)
}
